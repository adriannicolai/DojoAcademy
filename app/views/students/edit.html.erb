<h1>Editing <%= @student.first_name %> <%= @student.last_name %></h1>
<form action="/students/<%= @student.id %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="patch">
    <label>First Name</label>
    <input type="text" name="student[first_name]" value="<%= @student.first_name %>">
    <label>Last Name</label>
    <input type="text" name="student[last_name]" value="<%= @student.last_name %>">
    <label>Email</label>
    <input type="text" name="student[email]" value="<%= @student.email %>">
    <label>Dojo</label>
    <select name="student[dojo]">
        <% @dojos.each do |dojo|%>
            <% if dojo.id == @student.dojo.id %>
                <option value="<%= dojo.id %>" selected> <%= dojo.branch %></option>
            <% else %>
                <option value="<%= dojo.id %>"> <%= dojo.branch %></option>
            <% end %>
        <% end %>
    </select>
    <input type="submit" value="Update">
</form>
<a href="/dojos">Home</a> | <a href="/students/<%= @student.id%>"> <%= @student.first_name %></a>