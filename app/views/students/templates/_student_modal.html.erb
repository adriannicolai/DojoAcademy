
    <form action="/students<%= student.present? ? "/#{student["id"]}" : "" %>" method="post" id="<%= student.present? ? "updateStudentForm" : "createStudentForm"%>">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <% if student.present? %>
            <input type="hidden" name="_method" value="patch">
        <% end %>
        <div class="form-group">
            <label>First Name</label>
            <input type="text" class="form-control" name="student[first_name]" value="<%= student.present? ? student["first_name"] : "" %>">
        </div>
            <label>Last Name</label>
            <input type="text" class="form-control" name="student[last_name]" value="<%= student.present? ? student["last_name"] : "" %>">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="student[email]" value="<%= student.present? ? student["email"] : "" %>">
        </div>
        <div class="form-group">
            <label>Dojo</label>
            <select name="student[dojo]" class="form-select">
            <% dojos.each do |dojo| %>
                <% if dojo["id"] == current_dojo.to_i %>
                    <option value="<%= dojo["id"] %>" selected><%= dojo["branch"] %></option>
                <% else %>
                    <option value="<%= dojo["id"] %>"><%= dojo["branch"] %></option>
                <% end %>

            <% end %>
        </select>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary close-modal" data-dismiss="modal">Close</button>
            <input type="submit" class="btn btn-primary" value="<%= student.present? ? "Update" : "Create a new Student" %>">
        </div>
    </form>