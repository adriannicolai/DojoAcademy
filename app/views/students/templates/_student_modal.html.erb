<% if type == 'new_student' %>
    <form action="/students" method="post" id="createStudentForm">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group">
            <label>First Name</label>
            <input type="text" class="form-control" name="student[first_name]">
        </div>
            <label>Last Name</label>
            <input type="text" class="form-control" name="student[last_name]">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="student[email]">
        </div>
        <div class="form-group">
            <label>Dojo</label>
            <select name="student[dojo]" class="form-select">
            <% dojos.each do |dojo| %>
                <% if dojo["id"] == current_dojo.to_i %>
                    <option value="<%= dojo["id"] %>" selected><%= dojo["branch"] %></option>
                <% else %>
                    <option value="<%= dojo["id"] %>"><%= dojo["branch"] %></option>
                <% end %>

            <% end %>
        </select>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary close-modal" data-dismiss="modal">Close</button>
            <input type="submit" class="btn btn-primary" value="Create">
        </div>
    </form>
<% elsif type == "edit_student" %>
    <form action="/students/<%= student["id"] %>" method="post" id="updateStudentForm">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="_method" value="patch">
        <div class="form-group">
            <label>First Name</label>
            <input type="text" class="form-control" name="student[first_name]" value="<%= student["first_name"] %>">
        </div>
            <label>Last Name</label>
            <input type="text" class="form-control" name="student[last_name]" value="<%= student["last_name"] %>">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="student[email]" value="<%= student["email"] %>">
        </div>
        <div class="form-group">
            <label>Dojo</label>
            <select name="student[dojo]" class="form-select">
            <% dojos.each do |dojo| %>
                <% if dojo["id"] == current_dojo.to_i %>
                    <option value="<%= dojo["id"] %>" selected><%= dojo["branch"] %></option>
                <% else %>
                    <option value="<%= dojo["id"] %>"><%= dojo["branch"] %></option>
                <% end %>

            <% end %>
        </select>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary close-modal" data-dismiss="modal">Close</button>
            <input type="submit" class="btn btn-primary" value="Update">
        </div>
    </form>
<% end %>