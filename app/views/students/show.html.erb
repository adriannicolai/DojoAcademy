<h1><%= @dojo["branch"] %>'s <%= @student["dojo"] %> <%= @student["first_name"] %> <%= @student["last_name"] %></h1>
<h3><%= @student["email"] %></h3>
<% if @cohorts.length >= 2 %>
    <h1> Cohort </h1>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <td>First Name</td>
                <td>Last Name</td>
                <td>Email</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
        <% @cohorts.each do |cohort|%>
            <% if @student["id"] != cohort["id"]  %>
                <%= render partial: "students/templates/student_row", locals: {cohort: cohort} %>
            <% end %>
        <% end %>
        </tbody>
    </table>
<% end %>
<a  class="btn btn-primary" href="/dojos">Home</a> 

<!-- student modal -->
<div class="modal fade" id="studentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="studentModalTitle">New Student</h5>
                <button type="button" class="close close-modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="studentModalBody"></div>
        </div>
    </div>
</div>